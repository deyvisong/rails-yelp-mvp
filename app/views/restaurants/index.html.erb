<div>
  <h1>Restaurants</h1>
  <div class="row">
    <ul class="list-unstyled">
      <% @restaurants.each do |restaurant| %>
      <li>
        <%=link_to restaurant.name, restaurant %>
      </li>
      <% end %>
    </ul>
    <div>
      <%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
    </div>
</div>
